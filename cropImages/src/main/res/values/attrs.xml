<?xml version="1.0" encoding="utf-8"?>
<resources>

  <attr name="cropme_frame_width_percent" format="fraction" />
  <attr name="cropme_frame_height_percent" format="fraction" />
  <attr name="cropme_max_scale" format="float" />
  <attr name="cropme_with_border" format="boolean" />
  <attr name="cropme_background_alpha" format="fraction" />
  <attr name="cropme_custom_shape_layout" format="reference" />

  <attr name="cropme_overlay_shape" format="enum">
    <enum name="none" value="0" />
    <enum name="rectangle" value="1" />
    <enum name="circle" value="2" />
    <enum name="custom" value="3" />
  </attr>

  <declare-styleable name="CropLayout">
    <attr name="cropme_frame_width_percent" />
    <attr name="cropme_frame_height_percent" />
    <attr name="cropme_max_scale" />
    <attr name="cropme_overlay_shape" />
    <attr name="cropme_with_border" />
    <attr name="cropme_background_alpha" />
    <attr name="cropme_custom_shape_layout" />
  </declare-styleable>

  <declare-styleable name="CropOverlay">
    <attr name="cropme_with_border" />
    <attr name="cropme_background_alpha" />
  </declare-styleable>
</resources>
